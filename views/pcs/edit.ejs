<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-4 m-auto">
            <h1 class="text-center mt-3">New Page</h1>
            <form action="/pcs/<%= pc._id %>/?_method=patch" method="post">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="pc[name]" value="<%= pc.name %>">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="pc[price]" value="<%= pc.price %>">
                </div>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="description" name="pc[description]"><%= pc.description %></textarea>
                    <label for="description">Description</label>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="pc[quantity]" value="<%= pc.quantity %>">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Shop address</label>
                    <input type="text" class="form-control" id="address" name="pc[address]" value="<%= pc.address %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" class="form-control" id="image" name="pc[image]" value="<%= pc.image %>">
                    
                </div>
                <button type="submit" class="mt-3 btn btn-primary">Submit</button>
              </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>